# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/pinyourword
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# JWT Configuration
# Generate a secure 256-bit secret: openssl rand -base64 32
JWT_SECRET=your-very-secure-secret-key-at-least-256-bits-long-change-this-in-production
JWT_EXPIRATION=86400000
JWT_ISSUER=pinyourword-api

# AWS S3 Configuration
AWS_S3_BUCKET=pinyourword-media
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://192.168.0.160:19006

# Server Configuration
SERVER_PORT=8080

# Logging Levels (DEV: DEBUG, PROD: INFO/WARN)
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_BINDER=TRACE

# Hibernate DDL Auto (DEV: update, PROD: none)
HIBERNATE_DDL_AUTO=none

# Other Settings
JPA_SHOW_SQL=true
HIBERNATE_FORMAT_SQL=true
SWAGGER_ENABLED=true
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB
PAGINATION_DEFAULT_SIZE=20
PAGINATION_MAX_SIZE=100
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5
HIKARI_TIMEOUT=30000
